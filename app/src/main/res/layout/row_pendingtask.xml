<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customshape"
    android:orientation="horizontal"
    android:padding="@dimen/space_5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_weight="70"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/space_3"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Client1"
                android:textSize="@dimen/space_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTaskType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textStyle="bold"
                android:textSize="@dimen/space_15"
                android:gravity="right"
                android:textColor="@color/color_vendomatica_blue_dark"
                android:paddingRight="@dimen/space_10"
            android:text="Auditoria Presencial" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/space_3">

            <TextView
                android:id="@+id/txtField2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/space_3">

            <TextView
                android:id="@+id/txtField3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:textStyle="bold"
                android:textColor="@color/color_vendomatica_blue"
                 />
            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="right"
                android:paddingRight="@dimen/space_10"
                android:text="Auditoria Presencial" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="@dimen/space_30"
        android:layout_height="@dimen/space_30"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/space_3"
        android:layout_marginLeft="@dimen/space_3"
        android:layout_marginRight="@dimen/space_3"
        android:visibility="gone" />
</LinearLayout>