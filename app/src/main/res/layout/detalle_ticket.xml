<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_collapseParallaxMultiplier="0.0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalle"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_line"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/color_vendomatica_blue"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruta abastecimiento"
                    android:textSize="@dimen/space_15" />

                <TextView
                    android:id="@+id/txtRutaA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_weight="100"
                    android:gravity="right"
                    android:text="15.00"
                    android:textSize="@dimen/space_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serie maquina"
                    android:textSize="@dimen/space_15" />

                <TextView
                    android:id="@+id/txtSerieM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_weight="100"
                    android:gravity="right"
                    android:text="15.00"
                    android:textSize="@dimen/space_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Llamador"
                    android:textSize="@dimen/space_15" />

                <TextView
                    android:id="@+id/txtLlamador"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_weight="100"
                    android:gravity="right"
                    android:text="15.00"
                    android:textSize="@dimen/space_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Llamador teléfono"
                    android:textSize="@dimen/space_15" />

                <TextView
                    android:id="@+id/txtTlf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_weight="100"
                    android:gravity="right"
                    android:text="15.00"
                    android:textSize="@dimen/space_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# Ticket"
                    android:textSize="@dimen/space_15" />

                <TextView
                    android:id="@+id/txtTicket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_weight="100"
                    android:gravity="right"
                    android:text="15.00"
                    android:textSize="@dimen/space_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comentario"
                    android:textSize="@dimen/space_15" />

                <TextView
                    android:id="@+id/txtComent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_weight="100"
                    android:gravity="right"
                    android:text="15.00"
                    android:textSize="@dimen/space_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_line"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/color_vendomatica_blue"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:text="Ingreso"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_line"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@color/color_vendomatica_blue"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:text="Estado destino"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />
                <Spinner
                    android:id="@+id/cboEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customddl"
                    android:layout_marginLeft="@dimen/space_10"
                    android:spinnerMode="dropdown"
                    ></Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:text="clasificación"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />
                <Spinner
                    android:id="@+id/cboClasificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:background="@drawable/customddl"
                    android:spinnerMode="dialog"
                    ></Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:text="Falla"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />
                <Spinner
                    android:id="@+id/cboFalla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customddl"
                    android:layout_marginLeft="@dimen/space_10"
                    android:drawSelectorOnTop="true"
                    android:spinnerMode="dialog"
                    ></Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:text="Observación"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />

                <EditText
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/txtObserva"
                    android:lines="8"
                    android:minLines="6"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/customedit"
                    android:scrollbars="vertical"/>
                <LinearLayout
                    android:id="@+id/lnContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:text="Tomar Fotografía"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/photobtntn" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/photoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:text="Tomar Fotografía"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/photoImage" />

                </LinearLayout>
                <Button
                    android:text="Enviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sendbtn" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="344dp"
        android:layout_height="match_parent">

    </ScrollView>
</LinearLayout>