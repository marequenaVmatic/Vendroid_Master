<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/space_30"
    android:layout_marginLeft="@dimen/space_15"
    android:layout_marginRight="@dimen/space_15"
    android:layout_marginTop="@dimen/space_30"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/device"
        style="@style/captureTitle"
        android:text="@string/discovery" />

    <LinearLayout
        android:id="@+id/device_list_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone">

        <ListView
            android:id="@+id/device_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="10"/>
    </LinearLayout>

    <TextView
        android:id="@+id/type"
        style="@style/captureTitle"
        android:text="@string/capture_type" />

    <LinearLayout
        android:id="@+id/type_list_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone">

        <ListView
            android:id="@+id/type_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/pairing"
        style="@style/captureTitle"
        android:text="@string/pairing" />

    <LinearLayout
        android:id="@+id/pairing_list_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone">

        <ListView
            android:id="@+id/pairing_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pairing_loading"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:progressDrawable="@drawable/progress_background"
        android:indeterminate="false"
        style="@android:style/Widget.ProgressBar.Horizontal"/>

    <TextView
        android:id="@+id/pairing_loading_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:visibility="gone" />
</LinearLayout>