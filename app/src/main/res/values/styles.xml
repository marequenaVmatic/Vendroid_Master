<resources>

    <!-- Base application theme. -->

    <style name="FontWelcome25">
        <item name="android:textSize">@dimen/space_50</item>
        <item name="android:textColor">#9e5da3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontNormal15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">#202020</item>
    </style>

    <style name="FontNormal20">
        <item name="android:textSize">@dimen/space_20</item>
        <item name="android:textColor">#202020</item>
    </style>

    <style name="FontGray15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@color/color_vendomatica_blue</item>
    </style>

    <style name="FontToggle">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@color/color_vendomatica</item>
    </style>

    <style name="FontWhite20">
        <item name="android:textSize">@dimen/space_20</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="FontWhiteBold20">
        <item name="android:textSize">@dimen/space_20</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FontWhite15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="FontBlue15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@color/color_vendomatica_dark</item>
    </style>
    <style name="FontGreen15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@color/color_vendomatica</item>
    </style>
    <style name="FontBlueBold15">
        <item name="android:textSize">@dimen/space_15</item>
        <item name="android:textColor">@color/color_vendomatica</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="captureTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/color_accent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="LeftMenuItem">
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:paddingTop">@dimen/padding_snormal</item>
        <item name="android:paddingBottom">@dimen/padding_snormal</item>
        <item name="android:background">@color/color_canteen</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">start|center</item>
    </style>
    <style name="LeftMenuText">
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/fontsize_xsmall</item>
        <item name="android:textColor">@color/color_material_bold</item>
    </style>
</resources>
